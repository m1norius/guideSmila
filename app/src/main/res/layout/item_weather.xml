<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/id_txt_weather_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="200dp"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="TEMP" />

            <TextView

                android:id="@+id/id_txt_weather_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/id_txt_weather_temp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/id_txt_weather_temp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="200dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="TIME" />

            <TextView
                android:id="@+id/id_txt_weather_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/id_txt_weather_temp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/id_txt_weather_temp"
                android:layout_toRightOf="@+id/id_txt_weather_temp"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="200dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="SUNNY" />

            <TextView
                android:id="@+id/id_txt_weather_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/id_txt_weather_description"
                android:layout_alignStart="@+id/id_txt_weather_description"
                android:layout_below="@+id/id_txt_weather_description"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="200dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="WIND" />

            <ImageView

                android:id="@+id/id_img_weather"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:alpha="0.1"
                app:cardUseCompatPadding="true">

            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </FrameLayout>


</LinearLayout>