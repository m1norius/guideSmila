<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorExtraBus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="Titleeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
        android:id="@+id/id_txt_extra_bus_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:id="@+id/id_txt_extra_bus_description"
        tools:text="Description"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_txt_extra_bus_title"
        android:layout_centerHorizontal="true" />



</RelativeLayout>